#:kivy 1.10.1

<MainWidget>:
    #:set rect_height 260

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1.
            rectangle: (125, 330, self.width - 155, self.height - 360)



        Line:
            width: 1.
            rectangle: (0 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_0 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 1 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_1 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 2 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_2 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 3 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_3 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 4 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_4 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 5 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_5 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 6 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_6 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 7 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_7 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 8 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_8 / root.max_prob)

        Line:
            width: 1.
            rectangle: ((root.width / 12) * 9 + (150 - (root.width / 24)), 40, (root.width / 12) - 5, rect_height * root.prob_9 / root.max_prob)


    Button:
        text: "Clear"
        pos: 0, 110
        size_hint: 1, 1
        on_release: root.clear_canvas()


    Label:
        font_size: 100
        center_x: root.width / 16
        top: root.top - 50
        text: str(root.current)

    Label:
        font_size: 15
        center_x: root.width / 2
        center_y: 340
        text: root.log



    Label:
        font_size: 20
        center_x: 150
        top: 70
        text: str(0)

    Label:
        font_size: 20
        center_x: (root.width / 12) + 150
        top: 70
        text: str(1)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 2 + 150
        top: 70
        text: str(2)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 3 + 150
        top: 70
        text: str(3)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 4 + 150
        top: 70
        text: str(4)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 5 + 150
        top: 70
        text: str(5)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 6 + 150
        top: 70
        text: str(6)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 7 + 150
        top: 70
        text: str(7)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 8 + 150
        top: 70
        text: str(8)

    Label:
        font_size: 20
        center_x: (root.width / 12) * 9 + 150
        top: 70
        text: str(9)



    Label:
        font_size: 20
        center_x: 150
        top: rect_height * root.prob_0 / root.max_prob + 100
        text: str(root.prob_0 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) + 150
        top: rect_height * root.prob_1 / root.max_prob  + 100
        text: str(root.prob_1 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 2 + 150
        top: rect_height * root.prob_2 / root.max_prob  + 100
        text: str(root.prob_2 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 3 + 150
        top: rect_height * root.prob_3 / root.max_prob  + 100
        text: str(root.prob_3 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 4 + 150
        top: rect_height * root.prob_4 / root.max_prob  + 100
        text: str(root.prob_4 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 5 + 150
        top: rect_height * root.prob_5 / root.max_prob  + 100
        text: str(root.prob_5 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 6 + 150
        top: rect_height * root.prob_6 / root.max_prob  + 100
        text: str(root.prob_6 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 7 + 150
        top: rect_height * root.prob_7 / root.max_prob  + 100
        text: str(root.prob_7 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 8 + 150
        top: rect_height * root.prob_8 / root.max_prob  + 100
        text: str(root.prob_8 / 10) + '%'

    Label:
        font_size: 20
        center_x: (root.width / 12) * 9 + 150
        top: rect_height * root.prob_9 / root.max_prob + 100
        text: str(root.prob_9 / 10) + '%'
